{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "**/*.ts",
        "aiService.js"
    ],
    "exclude": [
        "node_modules",
        "temp"
    ]
}